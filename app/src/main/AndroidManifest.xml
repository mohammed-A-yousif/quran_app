<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quranapp">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash screen -->
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppThemeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- login activity -->
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- control activity -->
        <activity
            android:name=".Control"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- teach activity -->
        <activity
            android:name=".TeacherActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />


        <!-- addingTeacher activity -->
        <activity
            android:name=".AddingTeacher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- students activity -->
        <activity
            android:name=".StudentsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- addingStudents activity -->
        <activity
            android:name=".AddingStudent"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- missions activity -->
        <activity
            android:name=".Missions"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- review activity -->
        <activity
            android:name=".Review"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- studentsReviews activity -->
        <activity
            android:name=".StudentsReviews"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />


        <!-- teacher activity -->

    </application>

</manifest>